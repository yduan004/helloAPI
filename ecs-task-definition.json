{
  "family": "helloapi-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::835745295392:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::835745295392:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "helloapi",
      "image": "835745295392.dkr.ecr.us-east-1.amazonaws.com/helloapi:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DEBUG",
          "value": "False"
        },
        {
          "name": "ALLOWED_HOSTS",
          "value": "api.helloydz.com,helloapi-alb-1787389471.us-east-1.elb.amazonaws.com,localhost,127.0.0.1"
        },
        {
          "name": "CORS_ALLOWED_ORIGINS",
          "value": "https://api.helloydz.com,http://localhost:3000"
        },
        {
          "name": "SECURE_SSL_REDIRECT",
          "value": "False"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:835745295392:secret:helloapi/django/SECRET_KEY-Dpx8U8"
        },
        {
          "name": "DATABASE_NAME",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:835745295392:secret:helloapi/db/NAME-eJoxRQ"
        },
        {
          "name": "DATABASE_USER",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:835745295392:secret:helloapi/db/USER-Hijyir"
        },
        {
          "name": "DATABASE_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:835745295392:secret:helloapi/db/PASSWORD-ndiGf2"
        },
        {
          "name": "DATABASE_HOST",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:835745295392:secret:helloapi/db/HOST-wHameG"
        },
        {
          "name": "DATABASE_PORT",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:835745295392:secret:helloapi/db/PORT-YpQ0CF"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/helloapi",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "python -c \"import urllib.request; urllib.request.urlopen('http://localhost:8000/api/users/').read()\" || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}